<header>
  <div class="fade-load-down header header-var2 ext-var4">
    <div class="container">
      <div class="wrapper-logo-banner">
        <div class="row">
          <div class="col-md-4">
            <div class="logo-wrapper">
              <a href="<%= root_path %>"><%= image_tag 'logo.png' %></a>
            </div>
          </div>
          <div class="col-md-8">
            <div class="banner-login-wrapper">
              <div class="row">
                <div class="col-md-12">
                  <div class="wrapper-links">
                    <ul class="header-social-icons">
                      <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                      <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                      <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                    </ul>
                    <% if user_signed_in? %>

                    <span class="sign-in-buttons">
                      <%= link_to 'Edit', edit_user_registration_path, :class => 'login' %>
                      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'register' %>
                    </span>

                    <% else %>
                     <span class="sign-in-buttons">
                       <%= link_to 'Login', new_user_session_path, :class => 'login' %>
                       <%= link_to 'Register', new_user_registration_path, :class => 'register' %>
                     </span>

                    <% end %>
                  </div>

                </div>
              </div>
              <div class="banner-header">
                <a href="#">
                  <%= image_tag 'banner/header-banner.jpg' %>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- nav-->

    <div class="top-nav">
      <div class="container">
        <nav class="responsive-menu">
          <ul>
            <li><a href="<%= root_url %>">Home</a></li>
            <li><a href="<%= recipes_url %>">Recipes</a></li>

            <% if user_signed_in? %>
                <li><a href="<%= sliders_url %>">Sliders</a></li>
                <li class="submit-recipe"><a href="<%= new_recipe_url %>">Submit Recipe</a></li>
            <% end %>
          </ul>
        </nav>

      </div>
    </div>
    <!-- nav ends-->
  </div>
</header>